<?xml version="1.0" encoding="UTF-8"?>

<phpunit backupGlobals="false"
         backupStaticAttributes="false"
         colors="true"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         processIsolation="false"
         stopOnFailure="false"
         syntaxCheck="false"
         bootstrap="./bootstrap.php"
        >
    <testsuites>
        <testsuite name="Full Tacit Test Suite">
            <directory>./Tacit/</directory>
            <exclude>./Tacit/Test/Model/Monga/</exclude>
            <exclude>./Tacit/Test/Controller/Monga/</exclude>
            <directory phpVersion="7.0" phpVersionOperator="&lt;">./Tacit/Test/Model/Monga/</directory>
            <directory phpVersion="7.0" phpVersionOperator="&lt;">./Tacit/Test/Controller/Monga/</directory>
        </testsuite>
    </testsuites>

    <filter>
        <whitelist>
            <directory>../src/Tacit/</directory>
        </whitelist>
    </filter>
</phpunit>
